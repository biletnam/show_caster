.container
  .page-header
    span.room-right-15
      = link_to events_path, :class => 'btn btn-default' do
        span.glyphicon.glyphicon-list-alt
          = " #{ t("back") }"
    - if !@event.nil? && policy(@event).edit?
      = link_to edit_event_path(@event), :class => 'btn btn-primary' do
        span.glyphicon.glyphicon-pencil
          = " #{ t('events.edit_title') }"
    h1= "Le #{l @event.event_date, format:"%A %d %B Ã  %Hh%M"}"
    h1= "#{t 'theater_company'} sont au \"#{@event.theater.theater_name}\""

  dl.dl-horizontal
    dt= t('events.dur')
    dd= distance_of_time_in_words @event.event_date, @event.event_date + @event.duration * 60
    dt= t('events.address')
    dd= @event.theater.location
    dt= t('events.progress')
    dd= get_progress(@event)

    dt= t('events.note')
    dd= @event.note
    dt= t('events.created_by')
    dd= @event.user.full_name
    dt
      p.space-up-20= t("events.actors")
    dd
      - for actor in @event.actors
        .badge_user.room-right-10  style= "#{badge_user actor.user}"
          = "#{actor.user.full_name} "
          - if actor.stage_role != "player"
            span.badge
              = "#{actor.stage_role_i18n}"
    hr
      - if @event.event_date < Time.zone.now
        dd= link_to "Ajouter des photos", new_picture_path({event_id: @event.id}), class: 'btn btn-default'
    hr
      - unless @pictures.empty?
        dt
          | Photos
        dd
          - @pictures.each do |picto|
            span.room-around-55
              = link_to picto.photo.url
                = image_tag picto.photo.url(:medium)
